{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-skills"
  ],
  "mcp": {
    "perplexity-mcp": {
      "type": "local",
      "command": [
        "perplexity-mcp",
        "--model",
        "sonar-pro",
        "--reasoning-model",
        "sonar-reasoning-pro"
      ],
      "environment": {
        "PERPLEXITY_API_KEY": "{env:PERPLEXITY_API_KEY}"
      }
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--transport",
        "stdio",
        "--project",
        ".",
        "--context",
        "ide-assistant"
      ]
    }
  },
  "permission": {
    "todowrite": "allow",
    "todoread": "allow",
    "skill": "allow",
    "webfetch": "allow",
    "question": "allow",
    "read": "allow",
    "edit": "allow",
    "write": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "lsp": "allow",
    "patch": "allow"
  }
}
